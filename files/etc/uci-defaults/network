
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option packet_steering '1'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.2.254'
	option netmask '255.255.255.0'
	option gateway '192.168.2.1'
	option ip6ifaceid '::1'
	option delegate '0'
	option ip6assign '60'

config interface 'ipsec_server'
	option device 'ipsec0'
	option proto 'static'
	option ipaddr '192.168.100.1'
	option netmask '255.255.255.0'

config interface 'LAN6'
	option proto 'dhcpv6'
	option device '@lan'
	option reqaddress 'try'
	option reqprefix '62'
	option norelease '1'
	option ip6assign '64'
	option delegate '0'

config device
	option type 'bridge'
	option name 'docker0'

config device
	option type 'bridge'
	option name 'br-lan'
	list ports 'eth0'

config interface 'docker'
	option device 'docker0'
	option proto 'none'
	option auto '0'

config interface 'IPTV'
	option proto 'dhcp'
	option device 'eth1'
	option keepalive '0 1'
	option hostname '*'
	option clientid '0023b842c7db'
	option vendorid '0x3c:5343495456'
	option metric '20'
	option defaultroute '0'

config device
	option name 'eth1'
	option macaddr '00:23:b8:c2:c7:db'

